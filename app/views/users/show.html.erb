<div class="container">
  <div class="user-top">
    <div class="user-top__left">
      <%= @user.name %>
      has <%= @user.dreams.length %> dreams.
    </div>
    <div vlass="user-top__right">
      <%= pie_chart @chart %>
    </div>
  </div>
  <% if @user == current_user %>
    <%= form_for @dream do |f| %>
      <div class="form">
        <%= f.select :status, [["未実施", "0"], ["実施中", "1"], ["達成！", "2"]] %>
        <%= f.text_field :content, placeholder: "What's your dream?" %>
        <%= f.check_box :opened, {checked: true, checked_value: "1", unchecked_value: "0"} %>
        <%= f.label :公開 %>
        <%= f.submit :send %>
      </div>
    <% end %>
  <% end %>

  <div class="lists" id="dreams_list">
    <%= render partial: 'dream', collection: @dreams %>
  </div>
</div>