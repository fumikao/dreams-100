<div class="container">
  <h4>ユーザー</h4>
  <table>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <% if user == current_user %>
                <i class="material-icons">person</i>
              <% else %>                
                <i class="material-icons">touch_app</i>
              <% end %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td> has <%= user.dreams.length %> dreams.</td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= paginate(@users) %>
</div>